<div class="container">
  <h4><span style="background-color: #EEE"注文履歴詳細></span></h4>
  <table>
    <tr>
      <th>購入者</th>
      <td>
        <%= link_to admin_customer_path(@order.customer_id) do %>
          <%= @order.customer.full_name %>
        <% end %>
      </td>
    </tr>
    <tr>
      <td>注文日</td>
      <td><%= @order.created_at.strftime("%Y/%m/%d") %></td>
    </tr>
    <tr>
      <th>配送先</th>
      <td>
        〒<%= @order.post_code %><%= @order.address %><br>
        <%= @order.name %>
      </td>
    </tr>
    <tr>
      <th>支払方法</th>
      <td><%= @order.payment_method %></td>
    </tr>
    <tr>
      <th>注文ステータス</th>
      <td>
        <%= form_with model: @order, url: admin_order_path(@order) do |f| %></td>
          <%= f.select :status, Order.statuses_i18n.invert %>
          <%= f.submit "更新", class: "btn btn-primary" %>
        <% end %>
    </tr>
  </table>

  <br>
  <div style = "display: flex; align-item: flex-end;">
    <table class=table>
      <thead>
        <tr>
          <th style = "background: #EEE;">商品名</th>
          <th style = "background: #EEE;">単価（税込み）</th>
          <th style = "background: #EEE;">数量</th>
          <th style = "background: #EEE;">小計</th>
          <th style = "background: #EEE;">製作ステータス</th>
        </tr>
      </thead>

      <tbody>
        <% @order_details.each do |order_detail| %>
          <tr>
            <td><%= order_detail.item.name %></td>
            <td>￥<%= order_detail.item.add_tax_price.to_s(:delimited) %></td>
            <td>
              <%= form_with model: order_detail, url:admin_order_detail_path(order_detail), method: :patch do |f| %>
              <%= f.select :product_status, OrderDetail.product_statuses_i18n.invert %>
              <%= f.submit "更新", class: "btn btn-primary" %>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <div style = "width: 90%; margin-left: 50px; margin-bottom: 22px">
      <table>
        <tr>
          <th>用品会計</th>
          <td>￥<%= @order.total_payment.to_s(:delimited) %></td>
        </tr>
        <tr>
          <th>送料</th>
          <td>￥<%= @order.shipping_cost.to_s(:delimited) %></td>
        </tr>
        <tr>
          <th>請求金額</th>
          <td>￥<%= @order.total_payment.to_s(:delimited) %></td>
        </tr>
      </table>
    </div>
  </div>
</div>