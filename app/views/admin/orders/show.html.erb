<div class="container-fluid px-5 mt-5">
  <div class= "row">
    <h2>注文履歴詳細</h2>
  </div>
  <div class="row mt-3">
    <div  class="col-sm-10">
      <table class="table table-borderless">
        <tr>
          <th class="col-sm-2">購入者</th>
          <td>
            <%= link_to admin_customer_path(@order.customer_id) do %>
              <%= @order.customer.last_name %>
              <%= @order.customer.first_name %>
            <% end %>
          </td>
        </tr>
        <tr>
          <td>注文日</td>
          <td><%= @order.created_at.strftime("%Y/%m/%d") %></td>
        </tr>
        <tr>
          <th>配送先</th>
          <td>
            〒<%= @order.postal_code %><%= @order.address %><br>
            <%= @order.name %>
          </td>
        </tr>
        <tr>
          <th>支払方法</th>
          <td><%= @order.payment_method_i18n %></td>
        </tr>
        <tr>
          <th>注文ステータス</th>
          <td>
            <%= form_with model: Order, url: admin_order_path(@order.id), method: :patch do |f| %>
            <%= f.select :status, Order.statuses_i18n.map{|k,v| [v,k]},{selected: @order.status} %>
            <%= f.submit '更新', class:'btn btn-primary' %></td>
            <% end %>
        </tr>
      </table>
    </div>
  </div>

  <div class="row mt-3">
    <div class="col-sm-8">
      <table class="table">
        <thead class="thead-light">
          <tr>
            <th style = "background: #EEE;">商品名</th>
            <th style = "background: #EEE;">単価（税込み）</th>
            <th style = "background: #EEE;">数量</th>
            <th style = "background: #EEE;">小計</th>
            <th style = "background: #EEE;">製作ステータス</th>
          </tr>
        </thead>
        <tbody>
        <% @order_details.each do |order_detail| %>
          <tr>
            <td><%= order_detail.item.name %></td>
            <td>￥<%= order_detail.item.price.to_s(:delimited) %></td>
            <td><%= order_detail.amount %></td>
            <td><%= order_detail.price.to_s(:delimited) %></td>
            <td>
              <%= form_with model: order_detail, url:admin_order_detail_path(order_detail), method: :patch do |f| %>
              <%= f.select :product_status, OrderDetail.making_statuses_i18n.invert %>
              <%= f.submit "更新", class: "btn btn-primary" %>
              <% end %>
            </td>
          </tr>
        <% end %>
        </tbody>
      </table>
      <div class="col-md-3">
        <table class="table table-bordered">
          <tr>
            <th>商品合計</th>
            <td>￥<%= @order.total_payment.to_s(:delimited) %></td>
          </tr>
          <tr>
            <th>配送料</th>
            <td>￥<%= @order.shipping_cost.to_s(:delimited) %></td>
          </tr>
          <tr>
            <th>ご請求金額</th>
            <td>￥<%= @order.total_payment.to_s(:delimited) %></td>
          </tr>
        </table>
      </div>
    </div>
</div>