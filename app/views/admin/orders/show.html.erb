<div class="container">
  <h4><span style="background-color: #EEE"注文履歴詳細></span></h4>
  <table>
    <tr>
      <th>購入者</th>
      <td>
        <%= link_to admin_customer_path(@order.customer) do %>
          <%= @order.customer.full_name %>
        <% end %>
      </td>
    </tr>
    <tr>
      <td>注文日</td>
      <td><%= @order.created_at.strftime("%Y/%m/%d") %></td>
    </tr>
    <tr>
      <th>配送先</th>
      <td>
        〒<%= @order.post_code %><%= @order.address %><br>
        <%= @order.name %>
      </td>
    </tr>
    <tr>
      <th>支払方法</th>
      <td><%= @order.payment_method %></td>
    </tr>
    <tr>
      <th>注文ステータス</th>
      <td></td>
    </tr>
  </table>
  <br>
  <div style = "display: flex; align-item: flex-end;">
    <table class=table>
      <thead>
        <tr>
          <th>商品名</th>
          <th>単価（税込み）</th>
          <th>数量</th>
          <th>小計</th>
        </tr>
      </thead>
  </div>
</div>