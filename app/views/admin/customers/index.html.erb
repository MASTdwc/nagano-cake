<div class="container">
 <div class="row">
  <div class="col-sm-12 col-md-11 col-lg-8  mx-auto">
   <br>
     <h4><span class="bg-light">会員一覧<span></h4>
      <table class='table'>
       <thead class="table table-light">
        <tr>
          <th>会員ID</th>
          <th>氏名</th>
          <th>メールアドレス</th>
          <th>ステータス</th>
        </tr>
       </thead>
         <tbody>
           <% @customers.each do |customer| %>
            <tr>
              <td><%= customer.id %></td>
              <td><%= link_to (customer.last_name+customer.first_name),admin_customer_path(customer.id) %></td>
              <td><%= customer.email %></td>
              <td><% if customer.is_customer_deleted %>
                    <div class="text-danger">退会済</div>
                  <% else %>
                    <div class="text-success">有効会員</div>
                  <% end %>
              </td>
            </tr>
           <% end %>
　       </tbody>
      </table>
    <div class="col-md-5 mx-auto"><%= paginate @customers %></div>
  </div>
</div>
