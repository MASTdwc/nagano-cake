<div class="container-fluid px-5 mt-5">
  <div class= "row">
   <h2><%=@customer.last_name %><%= @customer.first_name %>さんの会員詳細</h2>
     <table class="row table">
      <tr>
        <th class="col-md-8">顧客ID</th>
        <td class="col-md-4"><%=@customer.id %></td>
      </tr>
      <tr>
         <th>氏名</th>
         <td><%=@customer.last_name %><%= @customer.first_name %></td>
      </tr>
      <tr>
        <th>フリガナ</th>
        <td><%=@customer.last_name_kana %><%= @customer.first_name_kana %></td>
      </tr>
      <tr>
        <th>郵便番号</th>
        <td><%=@customer.postcode %></td>
      </tr>
      <tr>
         <th>住所</th>
         <td><%=@customer.address %></td>
      </tr>
      <tr>
         <th>電話番号</th>
         <td><%=@customer.phone_number %></td>
      </tr>
      <tr>
         <th>メールアドレス</th>
         <td><%=@customer.email %></td>
      </tr>
      <tr>
         <th>会員ステータス<th>
         <td><% if @customer.is_customer_deleted %>
              <div class="text-danger">退会済</div>
           　<% else %>
              <div class="text-success">有効会員</div>
           　<% end %>
         </td>
      </tr>
    </table>
      
    <div class="row">
      <%=link_to "編集する", edit_admin_customer_path(@customer.id),class:"btn btn-primary" %>
      <%=link_to "注文履歴一覧を見る",admin_order_path,class:"btn btn-success" %>
    </div>
  </div>
</div>
       