<div class='container'>
 <div class='row'>
  <h2><span class="bg-secondary text-white">商品一覧</span></h2>
</div>
 </div>
<div class='container'>
 <div class='row'>
  <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
   <%=link_to new_admin_item_path do %>
     <p>+商品の追加</p>
    <% end %>
   <table class='table table-hover table-inverse'>
     <thead>
      <tr class= "table-secondary">
       <th>商品ID</th>
       <th>商品名</th>
       <th>税抜価格</th>
       <th>ジャンル</th>
       <th>ステータス</th>
       <th colspan="3"></th>
      </tr>
     </thead>
     <tbody>
      <% @item.each do |item| %>
       <tr>
        <td><%= item.id %></td>
        <td><%= link_to item.name, admin_item_path(item.id)%></td>
        <td><%= item.price %></td>
        <td><%= item.genre.name %></td>
        <td>
         <% if item.is_active %>
         <div class= "text-success">
          販売中
         </div>
         <% else %>
         <div class= "text-danger">
          販売停止中
         </div>
         <% end %>
        </td>
      </tr>
      <% end %>
     </tbody>
    </table>
    <div class= "row p-3">
     <div class="col-3 mx-auto">
      <%= paginate @item %>
      </div>
     </div> 
   </div>
 </div>
</div>















