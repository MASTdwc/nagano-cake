<div class="container px-5 px-sm-0">
 <div class="row" style="margin-top:25px;">
  <div class="col-sm-8 px-sm-0 offset-sm-1">
   <h2><span class="bg-secondary text-white">商品一覧</span></h2>
  </div>
  <div class="col-sm-2 px-sm-0 text-right mb-2">
    <%=link_to new_admin_item_path do %>
     <p>+商品の追加</p>
  <% end %>
 </div>
 <div class="col-sm-10 px-sm-0 mx-auto mb-5">
  <table class="table table-hover">
   <thead class="table-active">
    <tr>
     <th>商品ID</th>
     <th>商品名</th>
     <th>税抜価格</th>
     <th>ジャンル</th>
     <th>ステータス</th>
    </tr>
   </thead>
   <% @item.each do |item| %>
   <tbody>
    <div class="float start">
    <tr>
     <td><%= item.id %></td>
     <td><%= link_to item.name,admin_item_path(item.id) %></td>
     <td><%= item.price %></td>
     <td><%= item.genre.name %></td>
     <td>
      <% if item.is_active %>
      <div class= "text-success">
      販売中
      </div>
      <% else %>
      <div class= "text-danger">
      販売停止中
      </div>
      <% end %>
     </td>
    </tr>
    </div>
   </tbody>
   <% end %>
  </table>
   <%= paginate @item %>
  </div>
 </div>
</div>






















