<div class='container'>
 <div class='row'>
  <h2><span class="bg-light">商品編集<span></h2>
 </div>
</div>
<div class='container'>
 <div class='row'>
  <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
   <%= render 'layouts/errors', obj: @item %>
   <%= form_with model:@item, url: admin_item_path, method: :patch, local:true do |f| %>
  <div class="form-group">
   <%= f.file_field :image, accept:"image/*" %>
  </div>
  <div class="form-group">
   <%= f.label :"商品名" %>
   <%= f.text_field :name, class: 'form-control book_title' %>
  </div>
  <div class="form-group">
   <%= f.label :"商品説明" %>
   <%= f.text_area :introduction, class: 'form-control book_body' %>
  </div>
  <div class="form-group">
   <%= f.label :"ジャンル" %>
   <%= f.collection_select :genre_id, Genre.all, :id, :name, {include_blank: '---'} %>
  </div>
  <div class="form-group">
   <%= f.label :"価格" %>
   <%= f.text_field :price, class:'form-control book_title' %><p>円</p>
  </div>
  <div class="form-group">
   <%= f.label :"販売ステータス：" %>
   <%= f.label :is_active, '販売中', value: 1 %>
   <%= f.radio_button :is_active, '1' %>
   <%= f.label :is_active, '販売停止中', value: 0 %>
   <%= f.radio_button :is_active, '0' %>
  </div>
  <div class="form-group">
   <%= f.submit "変更を保存", class: 'btn btn-success' %>
  </div>
  <% end %>
  </div>
 </div>
</div>








