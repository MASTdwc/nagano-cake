<div class='container'>
 <div class='row'>
  <h2><span class="bg-light">商品詳細<span></h2>
 </div>
</div>
<div class='container'>
 <div class='row'>
  <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto pt-5">
   <%= image_tag @item.get_image, class: "img-fluid" %><br>
    <table class= "table">
        <tr>
          <td>商品名</td>
          <td><%= @item.name %></td>
        </tr>

        <tr>
          <td>商品説明</td>
          <td><%= @item.introduction %></td>
        </tr>

        <tr>
          <td>ジャンル</td>
          <td><%= @item.genre.name %></td>
        </tr>

        <tr>
          <td>税込み価格<br>(税抜き価格)</td>
          <td><%= @total_price.ceil %>(<%= @item.price %>)円</td>
        </tr>

        <tr>
          <td>販売ステータス</td>
          <td>
             <% if @item.is_active %>
             <div class= "text-success">
               販売中
              </div>
             <% else %>
             <div class= "text-danger">
               販売停止中
              </div>
             <% end %>
          </td>
        </tr>
      </table>
  </div>
 </div>
</div>
<div class="container">
 <div class="row">
  <div class="mx-auto">
   <%= link_to "編集する", edit_admin_item_path(@item.id), class: 'btn btn-success' %>
  </div>
 </div>
</div>











