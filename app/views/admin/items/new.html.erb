<div class='container'>
 <div class='row'>
  <h2><span class="bg-secondary text-white">商品新規登録</span></h2>
 </div>
</div>
<div class='container'>
 <div class='row'>
  <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
   <%= render 'layouts/errors', obj: @item %>
    <%= form_with model:@item, url: admin_items_path, method: :post, local:true do |f| %>
      <div class="form-group">
       <%= f.label :"商品画像" %>
       <%= f.file_field :image, accept:"image/*" %>
      </div>
      <div class="form-group">
       <%= f.label :"商品名" %>
       <%= f.text_field :name, class: 'form-control book_title', placeholder: "商品名" %>
      </div>
      <div class="form-group">
       <%= f.label :"商品説明" %>
       <%= f.text_area :introduction, class: 'form-control book_body', placeholder: "ここに説明文を記述します" %>
      </div>
      <div class="form-group">
       <%= f.label :"ジャンル" %>
       <%= f.collection_select :genre_id, Genre.all, :id, :name, {include_blank: "選択してください"} %>
      </div>
      <div class="form-group">
       <%= f.label :"税抜き価格" %>
       <%= f.text_field :price, class:'form-control book_title', placeholder: "1000" %><p>円</p>
      </div>
      <div class="form-group">
        <%= f.label :"販売ステータス：" %>
        <%= f.label :is_active, '販売中', value: 1 %>
        <%= f.radio_button :is_active, '1' %>
        <%= f.label :is_active, '販売停止中', value: 0 %>
        <%= f.radio_button :is_active, '0' %>
      </div>
      <div class="form-group">
       <%= f.submit "新規登録", class: 'btn btn-success' %>
      </div>
     <% end %>
    </div>
  </div>
</div>




















