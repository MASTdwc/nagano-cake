<h2>注文履歴一覧</h2>
<table class='table'>
  <thead>
    <tr>
      <th></th>
      <th>購入日時</th>
      <th>購入者</th>
      <th>注文個数</th>
      <th>注文ステータス</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    
    <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= link_to order.created_at.strftime('%Y/%m/%d %H:%M:%S'), admin_order_path.(order) %></td>
        <td><%= order.customers_id.name %></td>
        <td><%= order.orders.count %></td>
        </td>
      </tr>
    <% end %>
  </tbody>
  
  </tbody>
</table>

