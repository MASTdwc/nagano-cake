<div class="container">
  <h2>ショッピングカート</h2>
     <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th>商品名</th>
            <th>単価(税込)</th>
            <th>数量</th>
            <th>小計</th>
            <th></th>
          </tr>
        </thead>
         <tbody>
            <% @cart_items.each do |cart_item| %>
              <tr>
                <td><%= attachment_image_tag cart_item.image %><%= cart_item.name %></td>
                <td>￥<%= cart_item.item.with_tax_price%></td>
                <td><%=form_with model: cart_item,url:cart_items_path(cart_item),local:true do |f| %></td>
                      <%=f.hidden_field :id, :value => cart_item.id %>
                      <%= f.number_field:amount, size:1,min:1 %><%=f.submit "変更" %>
                    <% end %>
                </td>
                <td><%= cart_item.subtotal %></td>
                <td> <%= link_to cart_items_path(cart_item), method: :delete do %>
                       <button class="btn btn-danger">削除</button>
                     <% end %>
                </td>
              </tr>
              <% @total_price+= cart_item.subtotal %>
             <% end %>
           </table>
             <div class="row">
               <%=link_to root_path do %>
                 <button class="btn btn-primary">買い物を続ける</button>
               <% end %>
             </div>
               <table class="total_price">
                 <tr>
                   <th>合計金額</th>
                   <td>￥<% @total_price %></td>
                 </tr>
                </tablw>
              </div>
              <div class="text-center">
                <% if current_customer.cart_items.any? %>
                  <%=link_to new_oder_path do %>
                    <button class="btn btn-lg btn-succcess">情報入力に進む</button>
                  <% end %>
                <% end %>
               </div>
           </tbody>
          </table>
</div>         
        
        