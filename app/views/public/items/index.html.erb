<div class="container p-5">
  <div class="row p-3">
    <div class="mx-auto">
      <p>
        <h2>商品一覧</h2>
        (全<%= @items.count %>件)
      </p>
    </div>
  </div>
</div>

<div class="#row p-3">
  <% @items.each do |item| %>
    <div class="col-3 mx-auto">
      <%= link_to item_path(item.id) do %>
        <%= image_tag item.get_item_image(200,100) %>
      <% end %>
      <p><%= item_all.name %></p>
      <p>￥<%= item.add_tax_price %></p>
    </div>
  <% end %>
</div>

<div class="row p-3">
  <div class="col-3 mx-auto">
    <%= paginate @items %>
  </div>
</div>

