<div class='container'>
  <div class='row m-5'>
    <div class='mx-auto'>
      <h2>
        <span>配送先編集</span>
      </h2>
      <%= form_with model:@address do |f| %>
      <table>
        <tr>
          <td>
            <p>郵便番号（ハイフンなし）</p>
          </td>
          <td><%= f.text_field :postal_code %></td>
        </tr>
        <tr>
          <td>
            <p>住所</p>
          </td>
          <td><%= f.text_field :address, :size => "50" %></td>
        </tr>
        <tr>
          <td>
            <p>宛名</p>
          </td>
          <td><%= f.text_field :name %></td>
          <td>
            <%= f.submit "変更内容を保存",class: "btn btn-primary" %>
          </td>
        </tr>
      </table>
      <% end %>
    </div>
  </div>
</div>