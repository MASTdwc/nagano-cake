<div class='container'>
  <div class='row m-5'>
    <div class='mx-auto'>
      <h2>
        <span style="background-color: #EEE"配送先登録/一覧></span></span>
      </h2>
      <%= form_with model: @address do |f| %>
      <table>
        <tr>
          <td>
            <p>郵便番号（ハイフンなし）</p>
          </td>
          <td><%= f.text_fiels :postal_code,placeholder: "0000000" %></td>
        </tr>
        <tr>
          <td>
            <p>住所</p>
          </td>
          <td><%= f.text_field :address,placheholder: "東京都渋谷区代々木神園町0-0" %></td>
        </tr>
        <tr>
          <td>
            <p>宛名</p>
          </td>
          <td><%= f.text_field :name,placeholder: "令和道子" %></td>
          <td><%= f.submit "新規登録",class: "bbtn btn-primary" %></td>
        </tr>
      </table>
      <% end %>
    </div>
  </div>
</div>
<div class="row m-5">
  <div class="col-md-12">
    <table class="table table-bordered mt-5">
      <thead>
        <tr>
          <th>郵便番号</th>
          <th>住所</th>
          <th>宛名</th>
        </tr>
      </thead>
      <% @addresses.each do |address| %>
        <tbody>
          <td><%= address.postal_code %></td>
          <td><%= address.address %></td>
          <td><%= address.name %></td>
          <td>
            <%= link_to "編集する", edhit_address_path(address.id), class: "btn btn-success" %>
            <%= link_to "削除する", address_path(address.id),method: :delete, "deta-confirm" => "本当に消しますか？", class: "btn btn-danger" %>
          </td>
        </tbody>
      <% end %>
    </table>
  </div>
</div>